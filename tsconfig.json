{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "noEmitOnError": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"],
      "~icons/*": ["src/icons/*"],
      "~templates/*": ["src/templates/*"],
      "~utils/*": ["src/utils/*"],
    }
  },
  "include": ["./src/**/*"]
}
